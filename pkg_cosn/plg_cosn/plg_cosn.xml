<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.9" type="plugin" group="system" method="upgrade">
	<name>plg_cosn</name>
	<author>Alexander Gribkov, Joachim Schmidt</author>
	<creationDate>July 2022</creationDate>
	<copyright>Copyright (c) 2021 Alexander Gribkov, Joachim Schmidt. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/#GPL</license>
	<authorEmail>sallecta@yahoo.com</authorEmail>
	<authorUrl>https://github.com/sallecta/cosn</authorUrl>
	<!-- version here is allways 0, actual version in package xml file -->
	<version>0.0.0</version>
	<description>PLG_COSN_DESCRIPTION</description>
	<files>
		<filename plugin="cosn">plg_cosn.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/plg_system_cosn.ini</language>
		<language tag="en-GB">en-GB/plg_system_cosn.sys.ini</language>
	</languages>
	<scriptfile>plg_cosn_install_script.php</scriptfile>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="default_path_prefix" type="text" size="80" default="" label="PARAM_PATHPREFIX_LABEL" description="PARAM_PATHPREFIX_DESC" />
				<field name="hide_code" type="radio" default="0" label="PARAM_HIDECODE_LABEL" description="PARAM_HIDECODE_DESC">
					<option value="0">NO_NO</option>
					<option value="1">YES_YES</option>
				</field>
				<field name="secure_parm" type="radio" default="1" label="PARAM_SECURE_PARM_LABEL" description="PARAM_SECURE_PARM_DESC">
					<option value="0">NO_NO</option>
					<option value="1">YES_YES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
